@page "{bookId:int?}"
@model Bandymas.Pages.BooksList.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Editting @Model.Book.Title</h2>

<form method="post">
	<div class="form-group">
		<label asp-for="Book.AuthorId"></label>
		<select class="form-control" asp-for="Book.AuthorId"
				asp-items="Model.Authors"></select>
		<span class="text-danger" asp-validation-for="Book.AuthorId"></span>
	</div>
	<div class="form-group">
		<label asp-for="Book.Title"></label>
		<input asp-for="Book.Title" class="form-control" />
		<span class="text-danger" asp-validation-for="Book.Title"></span>
	</div>
	<div class="form-group">
		<label asp-for="Book.Type"></label>
		<select class="form-control" asp-for="Book.Type"
				asp-items="Model.Types"></select>
		<span class="text-danger" asp-validation-for="Book.Type"></span>
	</div>
	<div class="form-group">
		<label asp-for="Book.IBIN"></label>
		<input asp-for="Book.IBIN" class="form-control" />
		<span class="text-danger" asp-validation-for="Book.IBIN"></span>
	</div>
	<button type="submit" class="btn btn-primary">Save</button>
</form>