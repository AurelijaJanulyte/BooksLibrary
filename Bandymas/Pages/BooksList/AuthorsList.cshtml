@page
@model Bandymas.Pages.BooksList.AuthorListModel
@{
	ViewData["Title"] = "AuthorList";
}

<h2>AuthorsList</h2>


<a asp-page="./Edit" class="btn btn-primary">Add new book</a>

<form method="get">
	<div class="form-group">
		<div class="input-group">
			<input type="search" class="form-control" placeholder="Input book title,ibin or type to search"
				   asp-for="SearchedTerm" />
			<span class="input-group-btn">
				<button class="btn btn-default">
					<i class="glyphicon glyphicon-search"></i>
				</button>
			</span>
		</div>
	</div>

</form>

<table class="table">
	<tr>
		<th>First Name</th>
		<th>Last Name</th>
	</tr>
	@foreach (var author in Model.Authors)
	{
		<tr>
			<td>@author.FirstName</td>
			<td>@author.LastName</td>
		</tr>
	}
</table>