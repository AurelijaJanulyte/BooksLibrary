@page "{authorId:int?}"
@model Bandymas.Pages.BooksList.AddAuthorModel
@{
    ViewData["Title"] = "AddAuthor";
}

<h2>New Author Creation</h2>

<form method="post">
	<div class="form-group">
		<label asp-for="Author.FirstName"></label>
		<input asp-for="Author.FirstName" class="form-control" />
		<span class="text-danger" asp-validation-for="Author.FirstName"></span>
	</div>
	<div class="form-group">
		<label asp-for="Author.LastName"></label>
		<input asp-for="Author.LastName" class="form-control" />
		<span class="text-danger" asp-validation-for="Author.LastName"></span>
	</div>

	<button type="submit" class="btn btn-primary">Save</button>
</form>